
# Navigation
alt - j : /opt/brew/bin/yabai -m window --focus prev
alt - k : /opt/brew/bin/yabai -m window --focus next

# Moving windows
shift + alt - j : /opt/brew/bin/yabai -m window --warp prev
shift + alt - k : /opt/brew/bin/yabai -m window --warp next

# Delete window
shift + alt - c : /opt/brew/bin/yabai -m window --close; \
                  /opt/brew/bin/yabai -m signal --add event=window_destroyed action="yabai -m query --windows --window &> /dev/null || yabai -m window --focus mouse"; \
                  /opt/brew/bin/yabai -m signal --add event=application_terminated action="yabai -m query --windows --window &> /dev/null || yabai -m window --focus mouse"


# Move focus container to workspace
shift + alt - 1 : /opt/brew/bin/yabai -m window --space 1; \
                  /opt/brew/bin/yabai -m display --focus 1
shift + alt - 2 : /opt/brew/bin/yabai -m window --space 2; \
                  /opt/brew/bin/yabai -m display --focus 2
shift + alt - 3 : /opt/brew/bin/yabai -m window --space 3; \
                  /opt/brew/bin/yabai -m display --focus 3
shift + alt - 4 : /opt/brew/bin/yabai -m window --space 4; \
                  /opt/brew/bin/yabai -m display --focus 4

# Resize windows
alt - h : /opt/brew/bin/yabai -m window --resize left:-100:0; \
          /opt/brew/bin/yabai -m window --resize right:-100:0
alt - l : /opt/brew/bin/yabai -m window --resize right:100:0; \
          /opt/brew/bin/yabai -m window --resize left:100:0
shift + alt - h : /opt/brew/bin/yabai -m window --resize top:0:-100; \
          /opt/brew/bin/yabai -m window --resize bottom:0:-100
shift + alt - l : /opt/brew/bin/yabai -m window --resize bottom:0:100; \
          /opt/brew/bin/yabai -m window --resize top:0:100
ctrl + alt - j : \
    /opt/brew/bin/yabai -m window --resize bottom:0:100 ; \
    /opt/brew/bin/yabai -m window --resize top:0:100

ctrl + alt - k : \
    /opt/brew/bin/yabai -m window --resize top:0:-100 ; \
    /opt/brew/bin/yabai -m window --resize bottom:0:-100

ctrl + alt - l : \
    /opt/brew/bin/yabai -m window --resize right:100:0 ; \
    /opt/brew/bin/yabai -m window --resize left:100:0

# Float and center window
alt - c : /opt/brew/bin/yabai -m window --toggle float;\
               /opt/brew/bin/yabai -m window --grid 4:4:1:1:2:2

# unhide windows
alt - u : osascript -e "tell application \"System Events\" to key code 48 using {command down}"

# Set insertion point for focused container
shift + ctrl + alt - h : /opt/brew/bin/yabai -m window --insert west
shift + ctrl + alt - j : /opt/brew/bin/yabai -m window --insert south
shift + ctrl + alt - k : /opt/brew/bin/yabai -m window --insert north
shift + ctrl + alt - l : /opt/brew/bin/yabai -m window --insert east

# Float / Unfloat window
shift + alt - space : /opt/brew/bin/yabai -m window --toggle float

# Make fullscreen
alt - f         : /opt/brew/bin/yabai -m window --toggle zoom-fullscreen

# Toggle borders
shift + alt - b : if [[ $(/opt/brew/bin/yabai -m config window_border) = "off" ]]; then /opt/brew/bin/yabai -m config window_border on; else /opt/brew/bin/yabai -m config window_border off; fi
# Change desktop
#
alt - 1 : /opt/brew/bin/yabai -m display --focus 1
alt - 2 : /opt/brew/bin/yabai -m display --focus 2
alt - 3 : /opt/brew/bin/yabai -m display --focus 3
